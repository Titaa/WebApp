<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Quoi de neuf ?</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Bienvenue sur Phrase Du Jour by Esiearque !</h1>
    <h2>Connecte toi pour commencer.</h2>
    <%= link_to "Je m'inscris !", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("logoesiea.png", alt: "Logo Esiea"),
           'http://www.esiea.com/' %>
<% end %>
